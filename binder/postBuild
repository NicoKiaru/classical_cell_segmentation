#!/bin/bash

set -euo pipefail

# Create Desktop directory if it doesn't exist
mkdir -p ${HOME}/Desktop

# Create a desktop launcher for napari (optional but nice to have)
cat > ${HOME}/Desktop/napari.desktop << EOF
[Desktop Entry]
Version=1.0
Type=Application
Name=napari
Comment=Multi-dimensional image viewer
Exec=napari
Icon=applications-python
Terminal=false
StartupNotify=true
Categories=Science;Development;
EOF

# Make the desktop file executable
chmod +x ${HOME}/Desktop/napari.desktop

# Optional: Apply Xfce settings for better desktop experience
mkdir -p ${HOME}/.config/xfce4/xfconf/xfce-perchannel-xml